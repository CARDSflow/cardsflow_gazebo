#ifndef _DE_CALIPER_SIM_EXT_ACTUATORS_ER_PARSE_EXCEPTION_H_
#define _DE_CALIPER_SIM_EXT_ACTUATORS_ER_PARSE_EXCEPTION_H_

#include <exception>

namespace de
{
namespace caliper
{
namespace sim
{
namespace ext
{
namespace actuators
{
namespace er
{
class ParseException: public std::exception
{
public:
	ParseException(const ::std::string& description) :
			description(description)
	{
	}

	virtual ~ParseException() throw ()
	{
	}

	virtual const char* what() const throw ()
	{
		return description.c_str();
	}

protected:
	std::string description;
};
}
}
}
}
}
}

#endif
